<?xml version="1.0" ?>
<extension name="globals" version="1.0.0">
 <global name="foo" type="int" value="42"/>

 <function name="get_foo">
  <proto>int get_foo()</proto>
  <code>
    RETURN_LONG(GLOBALS_G(foo)); 
  </code>
 </function>

 <function name="set_foo">
  <proto>void set_foo(int val)</proto>
  <code>
    GLOBALS_G(foo) = val; 
  </code>
 </function>

 <test>
  <code>
echo get_foo()."\n";
set_foo(23)."\n";
echo get_foo()."\n";
  </code>
  <result>
42
23
  </result>
 </test>
</extension>
